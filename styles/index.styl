
body {
  background-color: $backgroundColor;
  font-family: $fontFamily;
}

h1, h2, h3, h4, h5, h6 {
  color: $headingTextColor;
}

code, kbd, .line-number {
  font-family: $fontFamilyCode;
}

a {
  font-weight: $anchorFontWeight;
}

.sections-layout {
  .theme-default-content:not(.custom) {
    padding: 0;

    & > *:first-child {
      margin-top: 0;
    }
  }
}

@media (max-width: $MQMobile) {
  .hide-mobile {
    display: none;
  }
}

@media (min-width: $MQMobile + 1) {
  .navbar {
    display: none;
  }

  .sidebar {
    top: 0;
  }
}

.fa-icon {
  vertical-align: text-bottom;
}

// for twemoji - https://github.com/markdown-it/markdown-it-emoji#change-output
.emoji {
  height: 0.85em;
}

.theme-default-content {
  .img-thumbnail {
    margin: 1rem 2%;
    width: 44%;

    @media (min-width: $MQNarrow + 1) {
      width: 20%;
    }
  }
}

